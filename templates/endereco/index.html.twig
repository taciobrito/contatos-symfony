{% extends 'base.html.twig' %}

{% block title %}
	Endereços
{% endblock %}

{% block body %}
  <h2>Endereços</h2>

  <div class="row">
    <a class="btn btn-primary" href="/enderecos/create">Criar</a>
  </div>

	<div class="row">
	  <table class="table table-striped table-hovered">
	  	<thead>
	  		<tr>
	  			<th>Quadra</th>
	  			<th>Número</th>
	  			<th>Observação</th>
	  			<th>Ações</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  		{% for endereco in enderecos %}
		  		<tr>
		  			<td>{{ endereco.quadra }}</td>
		  			<td>{{ endereco.numero }}</td>
		  			<td>{{ endereco.observacao }}</td>
		  			<td>
	            <a href="/enderecos/{{'{{ endereco.id }}'}}/edit" class="btn btn-sm btn-primary">Editar</a>
	            <a href="/enderecos/{{'{{ endereco.id }}'}}/destroy" onclick="return confirm('Confirma exclusão deste registro? Não poderá ser desfeito!')" class="btn btn-sm btn-danger">Remover</a>
	          </td>
		  		</tr>
		  	{% endfor %}
	  	</tbody>
	  </table>
	</div>
{% endblock %}