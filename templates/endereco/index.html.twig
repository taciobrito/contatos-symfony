{% extends 'base.html.twig' %}

{% block title %}
	Endereços
{% endblock %}

{% block body %}
  <h2>Endereços</h2>

	<div class="row">
	  <table class="table table-striped table-hovered">
	  	<thead>
	  		<tr>
	  			<th>Quadra</th>
	  			<th>Número</th>
	  			<th>Observação</th>
	  			<th>Ações</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  		{% for endereco in enderecos %}
		  		<tr>
		  			<td>{{ endereco['quadra'] }}</td>
		  			<td>{{ endereco['numero'] }}</td>
		  			<td>{{ endereco['observacao'] }}</td>
		  			<td>
	            <a href="#" class="btn btn-sm btn-primary">Editar</a>
	            <a href="#" class="btn btn-sm btn-danger">Remover</a>
	          </td>
		  		</tr>
		  	{% endfor %}
	  	</tbody>
	  </table>
	</div>
{% endblock %}