{% extends 'base.html.twig' %}

{% block title %}
	Contatos
{% endblock %}

{% block body %}
  <h2>Contatos</h2>

  <div class="row">
    <table class="table table-striped table-hovered">
    	<thead>
    		<tr>
    			<th>Nome</th>
    			<th>E-mail</th>
    			<th>Telefone</th>
    		</tr>
    	</thead>
    	<tbody>
    		{% for contato in contatos %}
  	  		<tr>
  	  			<td>{{ contato['nome'] }}</td>
  	  			<td>{{ contato['email'] }}</td>
  	  			<td>{{ contato['telefone'] }}</td>
  	  		</tr>
  	  	{% endfor %}
    	</tbody>
    </table>
  </div>
{% endblock %}